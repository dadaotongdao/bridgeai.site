---
export interface Props {
  spacing?: 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
  id?: string;
}

const { 
  spacing = 'lg', 
  class: className = '',
  id
} = Astro.props;

const spacings = {
  sm: 'py-8',
  md: 'py-12',
  lg: 'py-16',
  xl: 'py-24'
};

const classes = `${spacings[spacing]} ${className}`;
---

<section class={classes} id={id}>
  <slot />
</section>
---
import BaseLayout from '../layouts/BaseLayout.astro';
import Container from '../components/UI/Container.astro';
import Section from '../components/UI/Section.astro';
import Card from '../components/UI/Card.astro';
import Button from '../components/UI/Button.astro';
import Stat from '../components/UI/Stat.astro';
import { siteConfig } from '../site.config';

// SEO specific to about page
const pageTitle = `关于我们 - ${siteConfig.title}`;
const pageDescription = "Bridge AI Studio专注于为中小企业提供AI自动化解决方案，48小时闪电诊断，7天交付上线，用数字证明价值。";

// Team data
const team = [
  {
    name: "张创新",
    role: "创始人 & 首席AI架构师",
    bio: "10年AI产品开发经验，曾任职于腾讯、字节跳动，专注于企业数字化转型",
    avatar: "/team-1.jpg",
    social: {
      linkedin: "#",
      twitter: "#"
    }
  },
  {
    name: "李效率",
    role: "技术总监 & 自动化专家",
    bio: "8年流程自动化经验，服务过200+中小企业，擅长业务流程优化",
    avatar: "/team-2.jpg",
    social: {
      linkedin: "#",
      github: "#"
    }
  },
  {
    name: "王数据",
    role: "数据科学家 & 分析师",
    bio: "统计学博士，专注于机器学习和数据挖掘，帮助企业用数据驱动决策",
    avatar: "/team-3.jpg",
    social: {
      linkedin: "#",
      twitter: "#"
    }
  }
];

// Values
const values = [
  {
    title: "结果导向",
    description: "用数字说话，每个项目都有明确的ROI指标",
    icon: "📊"
  },
  {
    title: "快速交付",
    description: "7天内交付可运行系统，不拖延，不敷衍",
    icon: "⚡"
  },
  {
    title: "量身定制",
    description: "不做千篇一律的模板，每个方案都针对您的实际需求",
    icon: "🎯"
  },
  {
    title: "持续支持",
    description: "交付后提供30天免费技术支持，确保系统稳定运行",
    icon: "🤝"
  }
];

// Stats
const companyStats = [
  { label: "服务企业", value: "200+" },
  { label: "项目成功率", value: "98%" },
  { label: "平均交付时间", value: "5.2天" },
  { label: "客户满意度", value: "4.9/5" }
];
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <Section spacing="lg" class="bg-gray-50">
    <Container>
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          关于 Bridge AI Studio
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          我们致力于用AI技术帮助中小企业实现数字化转型，让技术真正为业务创造价值
        </p>
      </div>
    </Container>
  </Section>

  <!-- Mission & Vision -->
  <Section spacing="xl">
    <Container>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">
            我们的使命
          </h2>
          <p class="text-lg text-gray-600 mb-6">
            用AI，把旧世界的问题一周内跑起来。我们相信，人工智能不应该只是大公司的专利，每一个中小企业都应该能够享受到AI技术带来的效率提升。
          </p>
          <p class="text-lg text-gray-600 mb-8">
            我们专注于解决实际的业务问题，而不是追求炫酷的技术。每一个解决方案都必须能够用数字证明其价值。
          </p>
          <Button href="/contact" variant="primary" size="lg">
            开始您的AI转型
          </Button>
        </div>
        <div>
          <Card variant="elevated" class="p-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-4">
              我们的愿景
            </h3>
            <p class="text-gray-600 mb-6">
              成为中小企业最信赖的AI自动化合作伙伴，让每一家企业都能够：
            </p>
            <ul class="space-y-3 text-gray-600">
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                用AI自动化替代重复性工作
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                将员工从繁琐工作中解放出来
              </li>
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                专注于更有价值的创造性工作
              </li>
            </ul>
          </Card>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Company Stats -->
  <Section spacing="xl" class="bg-gray-50">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          用数字证明价值
        </h2>
        <p class="text-xl text-gray-600">
          我们的成果体现在客户的成功数据中
        </p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {companyStats.map((stat) => (
          <Stat 
            value={stat.value} 
            label={stat.label}
          />
        ))}
      </div>
    </Container>
  </Section>

  <!-- Values -->
  <Section spacing="xl">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          我们的价值观
        </h2>
        <p class="text-xl text-gray-600">
          这些价值观指导着我们的每一个决策和行动
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {values.map((value) => (
          <Card variant="elevated" class="p-6 text-center hover:scale-105 transition-transform duration-300">
            <div class="text-4xl mb-4">{value.icon}</div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">
              {value.title}
            </h3>
            <p class="text-gray-600">
              {value.description}
            </p>
          </Card>
        ))}
      </div>
    </Container>
  </Section>

  <!-- Team -->
  <Section spacing="xl" class="bg-gray-50">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          专业团队
        </h2>
        <p class="text-xl text-gray-600">
          拥有丰富经验的AI专家和技术工程师
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {team.map((member) => (
          <Card variant="elevated" class="p-6 text-center">
            <div class="w-24 h-24 bg-primary-100 rounded-full mx-auto mb-4 flex items-center justify-center">
              <span class="text-2xl font-bold text-primary-500">
                {member.name.charAt(0)}
              </span>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">
              {member.name}
            </h3>
            <p class="text-primary-500 font-medium mb-3">
              {member.role}
            </p>
            <p class="text-gray-600 mb-4">
              {member.bio}
            </p>
            <div class="flex justify-center space-x-3">
              {member.social.linkedin && (
                <a href={member.social.linkedin} class="text-gray-400 hover:text-primary-500 transition-colors">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
              )}
              {member.social.twitter && (
                <a href={member.social.twitter} class="text-gray-400 hover:text-primary-500 transition-colors">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                </a>
              )}
              {member.social.github && (
                <a href={member.social.github} class="text-gray-400 hover:text-primary-500 transition-colors">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
              )}
            </div>
          </Card>
        ))}
      </div>
    </Container>
  </Section>

  <!-- Process -->
  <Section spacing="xl">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          我们的方法论
        </h2>
        <p class="text-xl text-gray-600">
          经过200+项目验证的标准化流程
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-white text-2xl font-bold">1</span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">深度诊断</h3>
          <p class="text-gray-600">
            48小时内深度分析您的业务流程，识别AI自动化的最佳机会点
          </p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-white text-2xl font-bold">2</span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">快速原型</h3>
          <p class="text-gray-600">
            基于诊断结果快速设计解决方案原型，让您提前看到效果
          </p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-white text-2xl font-bold">3</span>
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">敏捷交付</h3>
          <p class="text-gray-600">
            采用敏捷开发模式，7天内交付可运行的系统，持续迭代优化
          </p>
        </div>
      </div>
    </Container>
  </Section>

  <!-- CTA -->
  <Section spacing="xl" class="bg-primary-500">
    <Container>
      <div class="text-center text-white">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          准备开始您的AI转型之旅？
        </h2>
        <p class="text-xl mb-8 opacity-90">
          让我们一起用AI技术为您的业务创造更多价值
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/contact" variant="secondary" size="lg">
            免费预约诊断
          </Button>
          <Button href="/services" variant="ghost" class="text-white hover:bg-white/20 border-white">
            了解我们的服务
          </Button>
        </div>
      </div>
    </Container>
  </Section>
</BaseLayout>
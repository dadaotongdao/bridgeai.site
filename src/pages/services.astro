---
import BaseLayout from '../layouts/BaseLayout.astro';
import Container from '../components/UI/Container.astro';
import Section from '../components/UI/Section.astro';
import Card from '../components/UI/Card.astro';
import Button from '../components/UI/Button.astro';
import Badge from '../components/UI/Badge.astro';
import { siteConfig } from '../site.config';

// SEO specific to services page
const pageTitle = `专业服务 - ${siteConfig.title}`;
const pageDescription = "三大核心AI服务：线索自动化、双语内容管线、售后FAQ机器人。48小时诊断，7天交付，用数字证明价值。";
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Page Header -->
  <Section spacing="lg" class="bg-gray-50">
    <Container>
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
          专业服务方案
        </h1>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          三大核心AI服务，为您的业务量身打造自动化解决方案
        </p>
      </div>
    </Container>
  </Section>

  <!-- Services Detail -->
  <Section spacing="xl">
    <Container>
      <div class="space-y-16">
        {siteConfig.services.map((service, index) => (
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <div class={index % 2 === 1 ? 'lg:order-2' : ''}>
              <Badge variant="primary" size="md" class="mb-4">
                服务 {index + 1}
              </Badge>
              <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
                {service.title}
              </h2>
              <p class="text-lg text-gray-600 mb-6">
                {service.description}
              </p>
              
              <div class="mb-8">
                <h3 class="text-xl font-semibold text-gray-900 mb-4">
                  交付物清单
                </h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                  {service.deliverables.map((item) => (
                    <div class="flex items-start">
                      <svg class="w-5 h-5 text-green-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                      </svg>
                      <span class="text-gray-700">{item}</span>
                    </div>
                  ))}
                </div>
              </div>
              
              <div class="flex flex-col sm:flex-row gap-4 mb-6">
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-primary-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-700">
                    <strong>交付周期：</strong>{service.timeline}
                  </span>
                </div>
                <div class="flex items-center">
                  <svg class="w-5 h-5 text-primary-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z" />
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-700">
                    <strong>起步价格：</strong>{service.price}
                  </span>
                </div>
              </div>
              
              <Button href="/contact" variant="primary" size="lg">
                立即咨询此服务
              </Button>
            </div>
            
            <div class={index % 2 === 1 ? 'lg:order-1' : ''}>
              <Card variant="elevated" class="p-8 h-96 flex items-center justify-center bg-gradient-to-br from-primary-50 to-gray-50">
                <div class="text-center">
                  <div class="w-24 h-24 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-12 h-12 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z" />
                    </svg>
                  </div>
                  <h3 class="text-xl font-semibold text-gray-900 mb-2">
                    {service.title}
                  </h3>
                  <p class="text-gray-600">
                    专业AI解决方案
                  </p>
                </div>
              </Card>
            </div>
          </div>
        ))}
      </div>
    </Container>
  </Section>

  <!-- Why Choose Us -->
  <Section spacing="xl" class="bg-gray-50">
    <Container>
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          为什么选择我们？
        </h2>
        <p class="text-xl text-gray-600">
          专注、专业、高效，用结果证明价值
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">快速交付</h3>
          <p class="text-gray-600">7天内交付可运行系统，不拖延，不敷衍</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">结果导向</h3>
          <p class="text-gray-600">用数字说话，每个项目都有明确的ROI指标</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">量身定制</h3>
          <p class="text-gray-600">不做千篇一律的模板，每个方案都针对您的实际需求</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-500 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z" clip-rule="evenodd" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">持续支持</h3>
          <p class="text-gray-600">交付后提供30天免费技术支持，确保系统稳定运行</p>
        </div>
      </div>
    </Container>
  </Section>

  <!-- CTA Section -->
  <Section spacing="xl" class="bg-primary-500">
    <Container>
      <div class="text-center text-white">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          选择适合您的服务方案
        </h2>
        <p class="text-xl mb-8 opacity-90">
          立即联系我们，获得专业AI解决方案建议
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/contact" variant="secondary" size="lg">
            免费预约咨询
          </Button>
          <Button href="/cases" variant="ghost" class="text-white hover:bg-white/20 border-white">
            查看成功案例
          </Button>
        </div>
      </div>
    </Container>
  </Section>
</BaseLayout>